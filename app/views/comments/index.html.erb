<h1>Listing comments</h1>

<table border="1">
  <tr>
    <th>Time </th>
    <th>Comment Author</th>
    
    <th>Comment</th>
   
    <th></th>
    
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.created_at %></td>
    <td><%= User.find(comment.commenting_id).name %></td>
    
    <td width="800" height="50"><textarea cols="120" rows="3" readonly="yes" style="resize: none;"><%= comment.comment_word %></textarea></td>
    
    
    <td><%= link_to 'Show', comment %></td>
    
  </tr>
<% end %>
</table>

